{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/misc/Masterclass/section%202/interesting_datasets/dwellings_per_capita_timeseries.csv"
  },
  "mark": {"type": "line", "interpolate":"basis"},
  "encoding": {
    "x": {"field": "year", 
    "axis": {
      "gridOpacity":0
    },
    "type": "temporal", "title": null},
    "y": {
      "scale": {
        "zero":false
      },
      "axis": {
        "labelExpr": "datum.value == 0.55 ? '0.55 Dwellings pc' : datum.value == 0.3 ? '0.3 Dwellings pc' : datum.value"
      },
      "field": "value", "type": "quantitative", "title": null},
    "color": {"field": "country"}
  },
  "width": 400,
  "height": 300,
  "title": {
    "text": "Housing: International Comparison",
    "subtitle": ["Dwellings Per Capita, Source: PublicHouse"]
  },
  "config": {"view": {"strokeOpacity":0}}
}