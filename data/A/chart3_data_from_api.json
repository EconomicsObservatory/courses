{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart showing quarter-on-4-quarter GDP Growth using ONS data from the ECO API.",
  "data": {"url": "https://api.economicsobservatory.com/gbr/grow?vega"},
  "mark": "line",
  "transform": [
    {"calculate": "datum.value/100", "as": "value"}
  ],
  "encoding": {
    "x": {"field": "date", "type": "temporal", "title":null},
    "y": {"field": "value", "type": "quantitative", "axis":{"format":".0%"}, "title":null}
  },
  "width": 400,
  "height": 300,
  "title": {
    "text":"British GDP Growth",
    "subtitle": ["QoQ4 % Growth", "Source: ONS via ECO-API"]
    }
}
